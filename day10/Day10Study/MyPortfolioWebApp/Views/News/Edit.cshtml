@model MyPortfolioWebApp.Models.News

@{
    ViewData["Title"] = "Edit";
}

<section id="news" class="section">
    <div class="container section-title" data-aos="fade-up">
        <h2>공지</h2>
        <p>알려드리고자 하는 뉴스입니다</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <h4>수정</h4>
        <hr />
        <div class="row">
            <div class="col-md">
                <form asp-controller="News" asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-2">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control editor" rows="10" placeholder="본문내용"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <!-- 기존 파일 영역 -->
                    <div class="form-group">
                        <label class="control-label">기존 첨부파일</label> 
                        @if (!string.IsNullOrEmpty(Model.UploadFile)) {
                            <a href="~/upload/@Model.UploadFile" target="_blank">@Model.UploadFile</a>
                        } else {
                            <span class="text-muted">첨부파일 없음</span>
                        }
                    </div>

                    <!-- 파일업로드 영역 -->
                    <div class="form-group mb-2">
                        <label for="UploadFile" class="control-label"></label>
                        <input type="file" name="UploadFile" id="UploadFile" class="form-control" />
                        [최대용량 : 10MB]
                        <span asp-validation-for="UploadFile" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="저장" class="btn btn-sm btn-success btn-kelly" />
                        <a asp-action="Index" class="btn btn-sm btn-success">목록</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
